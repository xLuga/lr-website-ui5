<mvc:View
	controllerName="sap.ui.demo.basicTemplate.controller.Home"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:uxap="sap.uxap"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:layout="sap.ui.layout"
>
	<uxap:ObjectPageLayout
		id="ObjectPageLayout"
		showTitleInHeaderContent="true"
		showEditHeaderButton="true"
		upperCaseAnchorBar="false"
	>
		<uxap:footer/>
		<uxap:headerContent>
			<FlexBox wrap="Wrap">
				<Avatar
					class="sapUiSmallMarginEnd"
					src="./img/ich.jpg"
					displaySize="XL"
				/>
				<layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
					<VBox class="sapUiSmallMarginBeginEnd">
						<HBox>
							<!-- class="sapUiSmallMarginBegin" -->
							<Image src="./img/twitter.png"/>
							<Link
								href="https://twitter.com/TheRealLuga"
								text="@TheRealLuga"
								class="sapUiSmallMarginBegin"
							/>
						</HBox>
						<HBox>
							<Image src="./img/github.png"/>
							<Link
								href="https://github.com/xLuga?tab=repositories"
								text="xLuga"
								class="sapUiSmallMarginBegin"
							/>
						</HBox>
						<HBox>
							<Image src="./img/linkedin.png"/>
							<Link
								href="https://www.linkedin.com/in/lukas-rausch-158a69250/"
								text="Lukas Rausch"
								class="sapUiSmallMarginBegin"
							/>
						</HBox>
						<HBox>
							<Image src="./img/whatsapp.png"/>
							<Link
								text="+49 151 688 06 766"
								class="sapUiSmallMarginBegin"
							/>
						</HBox>
						<HBox>
							<Image src="./img/email.png"/>
							<Link
								text="lukas_rausch@gmx.de"
								class="sapUiSmallMarginBegin"
							/>
						</HBox>
					</VBox>
				</layout:VerticalLayout>
			</FlexBox>
		</uxap:headerContent>
		<uxap:headerTitle>
			<uxap:ObjectPageDynamicHeaderTitle>
				<uxap:breadcrumbs>
					<Breadcrumbs currentLocationText="Die Seite wurde mit OpenUi5 entworfen"/>
				</uxap:breadcrumbs>
				<uxap:expandedHeading>
					<HBox>
						<Title
							text="Lukas Rausch"
							wrapping="true"
						/>
						<ObjectMarker
							type="Favorite"
							class="sapUiTinyMarginBegin"
						/>
					</HBox>
				</uxap:expandedHeading>
				<uxap:snappedHeading>
					<FlexBox
						fitContainer="true"
						alignItems="Center"
					>
						<Avatar
							src="./img/ich.jpg"
							class="sapUiTinyMarginEnd"
						/>
						<Title
							text="Lukas Rausch"
							wrapping="true"
						/>
					</FlexBox>
				</uxap:snappedHeading>
				<uxap:expandedContent>
					<Text text="Senior UI Entwickler - Fulda, DE"/>
				</uxap:expandedContent>
				<uxap:snappedContent>
					<Text text="Senior UI Entwickler - Fulda, DE"/>
				</uxap:snappedContent>
				<uxap:snappedTitleOnMobile>
					<Title text="Senior UI Entwickler - Fulda, DE"/>
				</uxap:snappedTitleOnMobile>
			</uxap:ObjectPageDynamicHeaderTitle>
		</uxap:headerTitle>
		<uxap:landmarkInfo/>
		<uxap:sections/>
	</uxap:ObjectPageLayout>
</mvc:View>