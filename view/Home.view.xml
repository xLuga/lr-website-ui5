<mvc:View controllerName="sap.ui.demo.basicTemplate.controller.Home" displayBlock="true" xmlns="sap.m" xmlns:uxap="sap.uxap" xmlns:mvc="sap.ui.core.mvc">
    <uxap:ObjectPageLayout id="ObjectPageLayout" showTitleInHeaderContent="true" showEditHeaderButton="true" editHeaderButtonPress="handleEditBtnPress" upperCaseAnchorBar="false">
        <uxap:footer />
        <uxap:headerContent />
        <uxap:headerTitle>
            <uxap:ObjectPageDynamicHeaderTitle>
                <uxap:breadcrumbs>
                    <Breadcrumbs id="breadcrumbsId" currentLocationText="Object Page Example">
                        <Link text="Page 1 a very long link" press="handleLink1Press" />
                        <Link text="Page 2 long link" press="handleLink2Press" />
                    </Breadcrumbs>
                </uxap:breadcrumbs>

                <uxap:expandedHeading>
                    <HBox>
                        <Title text="Lukas Rausch" wrapping="true" />
                        <ObjectMarker type="Favorite" class="sapUiTinyMarginBegin" />
                    </HBox>
                </uxap:expandedHeading>
                <uxap:snappedHeading>
                    <FlexBox fitContainer="true" alignItems="Center">
                        <Avatar src="./test-resources/sap/uxap/images/imageID_275314.png" class="sapUiTinyMarginEnd" />
                        <Title text="Denise Smith" wrapping="true" />
                    </FlexBox>
                </uxap:snappedHeading>

                <uxap:snappedHeading>
                    <FlexBox fitContainer="true" alignItems="Center">
                        <Avatar src="../img/ich.jpg" class="sapUiTinyMarginEnd" />
                        <Title text="Denise Smith" wrapping="true" />
                    </FlexBox>
                </uxap:snappedHeading>

                <uxap:expandedContent>
                    <Text text="Senior UI Enwtickler" />
                </uxap:expandedContent>

                <uxap:snappedContent>
                    <Text text="Senior UI Entwickler" />
                </uxap:snappedContent>

                <uxap:snappedTitleOnMobile>
                    <Title text="Senior UI Entwickler" />
                </uxap:snappedTitleOnMobile>
            </uxap:ObjectPageDynamicHeaderTitle>
        </uxap:headerTitle>
        <uxap:landmarkInfo />
        <uxap:sections />
    </uxap:ObjectPageLayout>
</mvc:View>
